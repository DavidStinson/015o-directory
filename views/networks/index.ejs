<%- include('../partials/header') %> 
<%- include('../partials/userNewNtwkDeviNav') %>

<main id="left-page-content-box">
  <% networks.forEach(network => { %>
    <section class="list-container container">
      <div class="network-head">
        <a 
          href="/networks/<%= network._id %>" 
          class="ntwk-name mono"
        ><%= network.friendlyName %></a>
        <a 
          href="/networks/<%= network._id %>" 
          class="ntwk-full-addr mono"
        ><%= network.fullNtwk %></a>
        <form action="/networks/<%= network._id %>">
          <button 
            class="connect-interface-btn os" 
            type="submit"
          >Connect device</button>
        </form>
      </div>
    </section>
  <% }) %>
</main>

<%- include('../partials/footer') %>
